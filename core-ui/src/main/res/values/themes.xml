<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoListYandex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--Background color-->
        <item name="backgroundColor">@color/back_primary</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_primary</item>
        <item name="colorPrimaryVariant">@color/back_secondary</item>
        <item name="colorOnPrimary">@color/label_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/back_primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>

        <!--        Colored checkbox-->
        <item name="colorAccent">@color/color_green</item>
        <item name="android:textColorSecondary">@color/support_separator</item>

        <!--        Disabling action bar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.ToDoListYandex.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ToDoListYandex.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ToDoListYandex.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>