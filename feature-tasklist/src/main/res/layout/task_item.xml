<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/task_completion_cb"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="18dp"
        android:theme="@style/Theme.ToDoListYandex" />


    <ImageView
        android:id="@+id/task_priority_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_high"
        android:visibility="gone"
        android:layout_marginEnd="6dp"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical"
            android:maxLines="3"
            style="@style/TextStyle.Body"
            android:layout_marginTop="10dp"
            android:text="Сделать очень важное дело " />

        <TextView
            android:id="@+id/task_deadline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="6dp"
            style="@style/TextStyle.Subhead"
            android:text="18.08.2002" />
    </LinearLayout>

    <ImageView
        android:id="@+id/task_info_but"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_info"
        android:layout_marginVertical="14dp"
        android:layout_marginEnd="18dp" />

</LinearLayout>